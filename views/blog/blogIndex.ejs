<% include ../partials/header.ejs %>

<h1>All posts</h1>

<ul>
    <% posts.forEach(function(post){ %>
        <li>
            <strong>
                <%= post.title %>
            </strong>
            <% var a ="/blog/posts/"; %>
            <% var id = post._id %>
            <% var url = a + id %>
            <em><a href=<%= url %>>More details</a></em>
        </li>
    <% }) %>
</ul>
