<% include partials/header.ejs %>
<h1>Add a new event</h1>
<div class="navbar-fixed">
    <nav class="grey">
        <div class="container">
            <div class="nav-wrapper">
                <a href="#" class="center brand-logo" >Evenox</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger">
                    <i class="material-icons">menu</i>
                </a>
                <ul class="left hide-on-med-and-down">
                    <li>
                        <a href="#home">section1</a>
                    </li>
                    <li>
                        <a href="#search">section2</a>
                    </li>
                    <li>
                        <a href="#home">section3</a>
                    </li>
                    <li>
                        <a href="#home">section4</a>
                    </li>
                </ul>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a href="/events" class="spla"><button class="btn-small waves-effect waves-dark grey">Events</button></a>
                    </li>
                    <li>
                        <a href="/blog" class="spla"><button class="btn-small waves-effect waves-dark grey">Blogs</button></a>
                    </li>
                    <% if (currentUser != undefined) { %>
                    <li>
                        <a href="/user" class="spla"><button class="btn-small waves-effect waves-dark grey">My Events</button></a>
                    </li>
                    <li>
                        <a href="/logout" class="spla"><button class="btn-small waves-effect waves-dark grey">Logout</button></a>
                    </li>
                    <% } else { %>
                    <li>
                        <a href="/login" class="spla"><button class="btn-small waves-effect waves-dark grey">Login</button></a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

</div>


<form action="/events" method="POST">

    <input type="text" name="eventName" placeholder="Name of your event">

    <input type="text" name="location" placeholder="Location of your event">

    <label> Starting Time and Date of Event:
        <input type="datetime-local" name="startTime" placeholder="Starting date and time of your event">
    </label>

    <label> Ending time and date of event:
        <input type="datetime-local" name="endTime" placeholder="Ending date and time of your event">
    </label>

    <textarea name="Description" placeholder="Event Description" id="" cols="30" rows="10"></textarea>

    <input type="submit">
</form>
